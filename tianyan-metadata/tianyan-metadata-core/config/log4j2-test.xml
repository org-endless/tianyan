<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" monitorInterval="300">
    <Properties>
        <property name="APP_NAME" value="tianyan-metadata"/>
        <property name="APP_HOME" value="/logs/${APP_NAME}"/>
        <property name="LOG_HOME" value="${APP_HOME}/logs"/>
        <property name="LOG_NAME" value="${APP_NAME}"/>
        <Property name="LOG_PATTERN_ASPECT">[%date{HH:mm:ss.SSS}][%TX{tl}][%-5p][%T]%tm%xEx%n</Property>
        <Property name="LOG_PATTERN">[%date{HH:mm:ss.SSS}]%TX{tl}[%-5p][%T][%c.%M:%L]%tm%xEx%n</Property>
        <property name="FILE_SIZE">20MB</property>
    </Properties>
    <Appenders>
        <Console name="Console_aspect" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN_ASPECT}" charset="UTF-8"/>
        </Console>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}" charset="UTF-8"/>
        </Console>
        <RollingRandomAccessFile name="RollingRandomAccessFile" fileName="${LOG_HOME}/${LOG_NAME}.log"
                                 filePattern="${LOG_HOME}/${date:yyyyMMdd}/${LOG_NAME}-%d{yyyyMMdd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${FILE_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Logger name="org.mongodb" level="INFO"/>
        <Logger name="org.mybatis" level="INFO"/>
        <Logger name="com.baomidou.mybatisplus" level="INFO"/>
        <Logger name="org.apache" level="INFO"/>
        <Logger name="org.springframework" level="INFO"/>
        <Logger name="org.springframework.security" level="INFO"/>
        <Logger name="_org.springframework" level="INFO"/>
        <Logger name="org.jboss" level="INFO"/>
        <Logger name="org.thymeleaf" level="INFO"/>
        <Logger name="org.hibernate" level="INFO"/>
        <Logger name="javax.management" level="INFO"/>
        <Logger name="sun.rmi" level="INFO"/>
        <Logger name="sun.net" level="INFO"/>
        <Logger name="jdk.event" level="INFO"/>
        <Logger name="io.netty" level="INFO"/>
        <Logger name="io.lettuce" level="INFO"/>
        <Logger name="okhttp3" level="INFO"/>
        <Logger name="io.minio" level="INFO"/>
        <Logger name="org.springdoc" level="INFO"/>
        <Logger name="druid" level="INFO"/>
        <Logger name="org.endless.ddd.starter.common.config.log.aspect.LogAspect" level="TRACE"
                additivity="false">
            <AppenderRef ref="Console_aspect"/>
        </Logger>
        <!-- 其他日志配置，Root 配置不再冗余打印 LogAspect 的日志 -->
        <Root level="TRACE">
            <AppenderRef ref="Console"/>
            <!-- 如果需要输出到文件，可以启用文件输出 -->
            <AppenderRef ref="RollingRandomAccessFile"/>
        </Root>
    </Loggers>
</Configuration>
