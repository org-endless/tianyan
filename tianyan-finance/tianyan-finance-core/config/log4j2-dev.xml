<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" monitorInterval="300">
    <Properties>
        <property name="APP_NAME" value="tianyan-finance"/>
        <property name="LOG_HOME" value="logs/${APP_NAME}"/>
        <property name="LOG_NAME" value="${APP_NAME}"/>
        <property name="LOG_PATTERN_ASPECT">[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5p][%T]%msg%xEx%n</property>
        <property name="LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5p][%T][%c:%L][%M]%msg%xEx%n</property>
        <property name="FILE_SIZE">20MB</property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8">
                <PatternMatch key="default"
                              pattern="${LOG_PATTERN}"/>
                <!-- 切面日志格式（LogAspect） -->
                <PatternMatch key="aspect"
                              pattern="${LOG_PATTERN_ASPECT}"/>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.mongodb" level="ERROR"/>
        <Logger name="org.mybatis" level="ERROR"/>
        <Logger name="com.baomidou.mybatisplus" level="ERROR"/>
        <Logger name="org.apache" level="ERROR"/>
        <Logger name="org.springframework" level="ERROR"/>
        <Logger name="_org.springframework" level="ERROR"/>
        <Logger name="org.jboss" level="ERROR"/>
        <Logger name="org.thymeleaf" level="ERROR"/>
        <Logger name="org.hibernate" level="ERROR"/>
        <Logger name="javax.management" level="ERROR"/>
        <Logger name="sun.rmi" level="ERROR"/>
        <Logger name="sun.net" level="ERROR"/>
        <Logger name="jdk.event" level="ERROR"/>
        <Logger name="io.netty" level="ERROR"/>
        <Logger name="io.lettuce" level="ERROR"/>
        <Logger name="okhttp3" level="ERROR"/>
        <Logger name="io.minio" level="ERROR"/>
        <Logger name="org.springdoc" level="ERROR"/>
        <Logger name="druid" level="ERROR"/>
        <Logger name="java.io.serialization" level="ERROR"/>
        <Logger name="org.endless.ddd.starter.common.config.aspect.log.LogAspect"
                level="ERROR"
                additivity="false">
            <AppenderRef ref="Console">
                <PatternSelector>
                    <PatternMatch key="default"/>
                </PatternSelector>
            </AppenderRef>
        </Logger>
        <Logger name="org.endless.ddd.starter.common.exception.handler.rest.AbstractRestAdapterExceptionHandler"
                level="ERROR"
                additivity="false">
            <AppenderRef ref="Console">
                <PatternSelector>
                    <PatternMatch key="default"/>
                </PatternSelector>
            </AppenderRef>
        </Logger>
        <Root level="ERROR">
            <AppenderRef ref="Console">
                <PatternSelector>
                    <PatternMatch key="default"/>
                </PatternSelector>
            </AppenderRef>
        </Root>
    </Loggers>
</Configuration>
