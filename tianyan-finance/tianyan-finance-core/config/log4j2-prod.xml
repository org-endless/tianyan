<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" monitorInterval="300">
    <Properties>
        <property name="APP_NAME" value="tianyan-finance"/>
        <property name="LOG_HOME" value="logs/${APP_NAME}"/>
        <property name="LOG_NAME" value="${APP_NAME}"/>
        <property name="LOG_PATTERN_ASPECT">[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5p][%T]%msg%xEx%n</property>
        <property name="LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5p][%T][%c:%L][%M]%msg%xEx%n</property>
        <property name="FILE_SIZE">20MB</property>
    </Properties>
    <Appenders>
        <RollingRandomAccessFile name="RollingRandomAccessFile"
                                 fileName="${LOG_HOME}/${LOG_NAME}.log"
                                 filePattern="${LOG_HOME}/%d{yyyyMMdd}/${LOG_NAME}-%d{yyyyMMdd}-%i.log">
            <PatternLayout charset="UTF-8">
                <PatternMatch key="default"
                              pattern="${LOG_PATTERN}"/>
                <!-- 切面日志格式（LogAspect） -->
                <PatternMatch key="aspect"
                              pattern="${LOG_PATTERN_ASPECT}"/>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${FILE_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Logger name="org.endless.ddd.starter.common.config.aspect.log.LogAspect"
                level="ERROR"
                additivity="false">
            <AppenderRef ref="RollingRandomAccessFile">
                <PatternSelector>
                    <PatternMatch key="aspect"/>
                </PatternSelector>
            </AppenderRef>
        </Logger>
        <Logger name="org.endless.ddd.starter.common.exception.handler.rest.AbstractRestAdapterExceptionHandler"
                level="ERROR"
                additivity="false">
            <AppenderRef ref="RollingRandomAccessFile">
                <PatternSelector>
                    <PatternMatch key="aspect"/>
                </PatternSelector>
            </AppenderRef>
        </Logger>
        <Root level="ERROR">
            <AppenderRef ref="RollingRandomAccessFile">
                <PatternSelector>
                    <PatternMatch key="default"/>
                </PatternSelector>
            </AppenderRef>
        </Root>
    </Loggers>
</Configuration>
