<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" monitorInterval="300">
    <Properties>
        <property name="APP_NAME" value="tianyan-sales"/>
        <property name="LOG_HOME" value="/logs/${APP_NAME}"/>
        <property name="LOG_NAME" value="${APP_NAME}"/>
        <property name="LOG_PATTERN_ASPECT">[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5p][%T]%msg%xEx%n</property>
        <property name="LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5p][%T][%c:%L][%M]%msg%xEx%n</property>
        <property name="FILE_SIZE">20MB</property>
    </Properties>
    <Appenders>
        <Console name="DefaultConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}" charset="UTF-8"/>
        </Console>
        <Console name="AspectConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN_ASPECT}" charset="UTF-8"/>
        </Console>
        <RollingRandomAccessFile name="DefaultFile"
                                 fileName="${LOG_HOME}/${LOG_NAME}.log"
                                 filePattern="${LOG_HOME}/%d{yyyyMMdd}/${LOG_NAME}-%d{yyyyMMdd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${FILE_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="AspectFile"
                                 fileName="${LOG_HOME}/${LOG_NAME}.log"
                                 filePattern="${LOG_HOME}/%d{yyyyMMdd}/${LOG_NAME}-%d{yyyyMMdd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${FILE_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Logger name="org.springframework" level="ERROR"/>
        <Logger name="_org.springframework" level="ERROR"/>
        <Logger name="org.apache" level="ERROR"/>
        <Logger name="io.undertow" level="ERROR"/>
        <Logger name="org.xnio" level="ERROR"/>
        <Logger name="org.jboss" level="ERROR"/>
        <Logger name="org.thymeleaf" level="ERROR"/>
        <Logger name="javax.management" level="ERROR"/>
        <Logger name="sun.rmi" level="ERROR"/>
        <Logger name="sun.net" level="ERROR"/>
        <Logger name="io.netty" level="ERROR"/>
        <Logger name="io.lettuce" level="ERROR"/>
        <Logger name="io.minio" level="ERROR"/>
        <Logger name="io.micrometer" level="ERROR"/>
        <Logger name="okhttp3" level="ERROR"/>
        <Logger name="java.io.serialization" level="ERROR"/>
        <Logger name="org.springdoc" level="ERROR"/>

        <Logger name="org.hibernate" level="ERROR"/>
        <Logger name="org.mongodb" level="ERROR"/>
        <Logger name="org.sqlite" level="ERROR"/>
        <Logger name="com.alibaba" level="ERROR"/>
        <Logger name="com.zaxxer.hikari" level="ERROR"/>
        <Logger name="org.mybatis" level="ERROR"/>
        <Logger name="com.baomidou.mybatisplus" level="ERROR"/>
        <Logger name="com.github.pagehelper" level="ERROR"/>

        <Logger name="org.endless.ddd.starter.common.config.aspect.log.LogAspect"
                level="ERROR" additivity="false">
            <AppenderRef ref="AspectConsole"/>
        </Logger>
        <Logger name="org.endless.ddd.starter.common.exception.AbstractRestExceptionHandler"
                level="ERROR" additivity="false">
            <AppenderRef ref="AspectConsole"/>
        </Logger>
        <Root level="ERROR">
            <AppenderRef ref="DefaultConsole"/>
        </Root>
    </Loggers>
</Configuration>
